{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist/rapid-pharmaceuticals/server",
    "module": "es2022",
    "target": "es2022",
    "types": ["node"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "files": [
    "server.ts",
    "src/main.server.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
